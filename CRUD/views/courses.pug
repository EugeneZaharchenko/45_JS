extends layout

block content
    h1 Все курсы академии
    .btn-group-lg(role="group")
        a.btn.btn-primary.btn-secondary(href="courses/add") Создать новый курс
    table.table.table.striped
        thead
            tr
                th Id курса
                th Курс
                th
                th
        tbody
            each course in courses
                tr
                    td=course.id
                    td=course.name
                    td(style="width: 50px; font-size: 20px"): a(href="/courses/edit/" + course.id)
                        span.glyphicon.glyphicon-pencil
                    td(style="width: 50px; font-size: 20px"): a(href="/courses/delete/" + course.id)
                        span.glyphicon.glyphicon-remove